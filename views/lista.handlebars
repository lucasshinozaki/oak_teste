<h1>Listagem de Produtos</h1>
<table class="table table-borderless table-striped ">
    <thead class="thead-dark">
        <tr>
            <th scope="col" style="width: 60%;">Nome do produto</th>
            <th scope="col" style="width: 20%;">Valor</th>
            <th scope="col" style="width: 20%;">Ação</th>
        </tr>
    </thead>
    <tbody>
        {{#each produtos}}
            <tr>
                <td scope="row">
                    <b>{{nome_produto}}</b>
                    <p>Descrição: {{descricao_produto}}</p>
                </td>
                <td scope="row">R${{valor_produto}}</td>
                <td>
                    <a href="/editar/{{@index}}">
                        <button class="btn btn-success mt-1">Editar categoria</button>
                    </a>
                    <form action="/deletar" method="POST">
                        <input type="hidden" name="id" value="{{@index}}">
                        <button type="submit" class="btn btn-danger mt-1">Deletar Produto
                        </button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
<br>
<a href="/" class="btn btn-success mt-4">Cadastrar Novo Produto</a>

