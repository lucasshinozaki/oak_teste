<h1>Cadastro de Produto</h1>
<form action="/adiciona" method="POST">
    <div class="card">
        <div class="card-body">
            <label for="nome_produto">Nome do Produto:</label>
            <input type="text" id="nome_produto" name="nome_produto" class="form-control" required><br><br>

            <label for="descricao_produto">Descrição do Produto:</label>
            <input type="text" id="descricao_produto" name="descricao_produto" class="form-control" required><br><br>

            <label for="valor_produto">Valor do Produto:</label>
            <input type="number" id="valor_produto" name="valor_produto" step="0.01" class="form-control"
                required><br><br>

            <label for="status_produto">Disponível para Venda:</label>
            <select id="status_produto" name="status_produto" class="form-select form-select-lg mb-3"
                aria-label=".form-select-lg example" required>
                <option value="sim">Sim</option>
                <option value="nao">Não</option>
            </select><br><br>
        <button type="submit" class="btn btn-success mt-4">Cadastrar</button>
        </div>
    </div>

</form>